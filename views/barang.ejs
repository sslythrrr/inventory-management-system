        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const urlParams = new URLSearchParams(window.location.search);
                const idBarang = urlParams.get('id');
                const action = urlParams.get('action');

                if (idBarang && action === 'edit') {
                    // Load barang detail and open modal
                    getBarangDetail(idBarang);

                    // Wait a bit for modal to be ready, then show it
                    setTimeout(() => {
                        const editModal = new bootstrap.Modal(document.getElementById('editBarangModal'));
                        editModal.show();
                    }, 300);
                }
            });
            function openEditModal(idBarang) {
                const newUrl = new URL(window.location);
                newUrl.searchParams.set('id', idBarang);
                newUrl.searchParams.set('action', 'edit');
                window.history.pushState({}, '', newUrl);

                // Load detail and show modal
                getBarangDetail(idBarang);
                const editModal = new bootstrap.Modal(document.getElementById('editBarangModal'));
                editModal.show();
            }

            document.getElementById('editBarangModal').addEventListener('hidden.bs.modal', function () {
                // Remove id parameter from URL when modal is closed
                const newUrl = new URL(window.location);
                newUrl.searchParams.delete('id');
                newUrl.searchParams.delete('action');
                window.history.pushState({}, '', newUrl);
            });
        </script>
